<header class="bg-white">
  <nav class="flex items-center justify-between border-b border-zinc-100 p-4">
    <div class="flex items-center gap-4">
      <%= for link <- @menu.links, link != :skip do %>
        <%= maybe_link(@socket, @env, link) %>
      <% end %>
    </div>
  </nav>
</header>

<main class="mx-auto max-w-full px-2 sm:px-6 lg:px-8 mt-10">
  <%= render_page(@page.module, assigns) %>
</main>
